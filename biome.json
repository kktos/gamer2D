{
	"$schema": "https://biomejs.dev/schemas/1.6.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src/**/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": ["src", "./rollup.config.mjs"]
	},
	"formatter": {
		"lineWidth": 160,
		"include": ["src", "./rollup.config.mjs"]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
